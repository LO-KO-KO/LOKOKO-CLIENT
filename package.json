{
  "name": "LOCOCO-CLIENT",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate:api:web": "dotenv -e .env -- sh -lc 'curl -s \"$SWAGGERI_URL\" | sed \"s/\\\"openapi\\\":\\\"3\\.1\\.0\\\"/\\\"openapi\\\":\\\"3.0.1\\\"/\" | npx prettier --parser json > ./tmp-spec.json &&  swagger-typescript-api generate -p ./tmp-spec.json -o ./apps/web/swagger-codegen --modular --clean-output --module-name-first-tag && rm ./tmp-spec.json'",
    "generate:type-spec": "dotenv -e .env -- sh -lc 'curl -s \"$SWAGGERI_URL\" | sed \"s/\\\"openapi\\\":\\\"3\\.1\\.0\\\"/\\\"openapi\\\":\\\"3.0.1\\\"/\" > ./tmp-spec.json'",
    "generate:swagger-api": "swagger-typescript-api generate -p ./tmp-spec.json -o ./apps/web/swagger-codegen --modular --clean-output --module-name-first-tag && rm ./tmp-spec.json",
    "generate:api:web:all": "pnpm generate:type-spec && pnpm generate:swagger-api"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "dotenv-cli": "^8.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "swagger-typescript-api": "^13.2.7",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
